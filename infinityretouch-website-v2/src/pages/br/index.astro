---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import CompareSlider from '../components/CompareSlider.astro'; // <--- Importe aqui
---

<!-- No meio do HTML, onde você quer que apareça -->
<section class="py-20 bg-slate-900">
  <div class="text-center mb-10">
    <h2 class="text-3xl font-bold text-white">See the Difference</h2>
    <p class="text-slate-400">Drag the slider to compare</p>
  </div>

  <CompareSlider 
    beforeImage="/foto-antes.webp" 
    afterImage="/foto-depois.webp" 
    altText="Infinity Retouch Example" 
  />
</section>
        <section class="py-16 bg-slate-800/50">
            <div class="max-w-6xl mx-auto px-4 text-center">
                <h2 class="text-3xl font-bold mb-8">Why not just use Generative Fill?</h2>
                <div class="grid md:grid-cols-2 gap-8">
                    <div class="p-6 bg-red-900/10 border border-red-900/30 rounded-xl">
                        <h3 class="text-red-400 font-bold text-xl mb-2">❌ Generative Fill</h3>
                        <p class="text-slate-400">Invents fake pixels, distorts fingers, changes floor textures, and creates "AI look" artifacts.</p>
                    </div>
                    <div class="p-6 bg-green-900/10 border border-green-900/30 rounded-xl">
                        <h3 class="text-green-400 font-bold text-xl mb-2">✅ Infinity Retouch</h3>
                        <p class="text-slate-400">Uses advanced algorithms to blend existing pixels. Maintains original lighting, grain, and reality.</p>
                    </div>
                </div>
            </div>
        </section>
	</main>

    <!-- FOOTER SIMPLIFICADO -->
    <footer class="bg-slate-950 py-12 border-t border-slate-800 text-center">
        <p class="text-slate-500 text-sm">
            © 2024 Infinity Retouch. All rights reserved.<br>
            <span class="text-xs opacity-60">Adobe, Photoshop and the Adobe logo are either registered trademarks or trademarks of Adobe in the United States and/or other countries.</span>
        </p>
    </footer>
</Layout>